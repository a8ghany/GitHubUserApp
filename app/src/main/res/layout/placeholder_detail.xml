<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_placeholder"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_repos_placeholder"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_name_placeholder"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar_placeholder" />

    <View
        android:id="@+id/tv_username_placeholder"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_placeholder" />

    <View
        android:id="@+id/tv_location_placeholder"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_username_placeholder" />

    <View
        android:id="@+id/tv_company_placeholder"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_location_placeholder" />

    <!-- Repos -->
    <View
        android:id="@+id/tv_repos_placeholder"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/iv_avatar_placeholder"
        app:layout_constraintTop_toBottomOf="@id/user_repos_placeholder" />

    <View
        android:id="@+id/user_repos_placeholder"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_placeholder"
        app:layout_constraintStart_toStartOf="@id/tv_repos_placeholder"
        app:layout_constraintEnd_toEndOf="@id/tv_repos_placeholder"/>

    <!-- Followers -->
    <View
        android:id="@+id/tv_followers_placeholder"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/tv_repos_placeholder"
        app:layout_constraintTop_toBottomOf="@id/user_followers_placeholder"/>

    <View
        android:id="@+id/user_followers_placeholder"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_placeholder"
        app:layout_constraintStart_toStartOf="@id/tv_followers_placeholder"
        app:layout_constraintEnd_toEndOf="@id/tv_followers_placeholder"/>

    <!-- Following -->
    <View
        android:id="@+id/tv_following_placeholder"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/tv_followers_placeholder"
        app:layout_constraintTop_toBottomOf="@id/user_following_placeholder"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/user_following_placeholder"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_placeholder"
        app:layout_constraintStart_toStartOf="@id/tv_following_placeholder"
        app:layout_constraintEnd_toEndOf="@id/tv_following_placeholder"/>

</androidx.constraintlayout.widget.ConstraintLayout>